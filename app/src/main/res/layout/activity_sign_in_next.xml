<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin_and_signup.SignUpNextActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWomenExercise"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:paddingBottom="50dp"
        android:src="@drawable/vector_section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivWomenExercise">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="315dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Let's complete your profile"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="315dp"
            android:layout_height="20dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="It will help us to know more about you!"
            android:textColor="#7B6F72"
            android:textSize="13dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_edittexxt_sl"
            android:drawableStart="@drawable/genere"
            android:hint="Choose Gender"
            android:paddingStart="12dp"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/arrow_down"
            android:paddingEnd="12dp"
            android:textSize="15dp"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:hint="Date of Birth"
            android:textSize="15dp"
            android:drawableStart="@drawable/calendar"
            android:drawablePadding="8dp"
            android:paddingStart="12dp"
            android:inputType="datetime"
            android:background="@drawable/background_edittexxt_sl" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:background="@drawable/background_edittexxt_sl"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/weight"
                android:hint="Your Weight"
                android:textSize="15dp"
                android:paddingStart="12dp"
                android:drawablePadding="8dp"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/buttonkg"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="315dp"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:background="@drawable/background_edittexxt_sl"
                android:layout_marginEnd="8dp"
                android:hint="Your Height"
                android:textSize="15dp"
                android:drawableStart="@drawable/swap"
                android:paddingStart="12dp"
                android:drawablePadding="8dp"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/buttomcm"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background_signup"
            android:text="Next"
            android:gravity="center"
            android:drawableEnd="@drawable/arrow_right"
            android:drawableTint="@color/white"
            android:paddingStart="125dp"
            android:paddingEnd="125dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>